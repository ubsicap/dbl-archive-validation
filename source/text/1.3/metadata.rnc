# metadata.rnc
# ----------------------------------------------------------------------------------------------------------------------
# This is a compact syntax Relax NG Schema for the DBL @type="text" metadata information file.
# DBL bundle version = 1.3

# Suggested Dublin Core Metadata (DCMI) element/refinement relationships are added as documentation strings "## DCMI: "
# A syntax encoding scheme may be mentioned after the DCMI documentation in parentheses; e.g. language/iso (ISO639-3)
# ----------------------------------------------------------------------------------------------------------------------

default namespace = ""
datatypes xsd = "http://www.w3.org/2001/XMLSchema-datatypes"

start = m.DBLMetadata

div {
   m._.contentType.enum =
      "xhtml"
   m._.contentType =
      attribute contentType { m._.contentType.enum }
   m._.code =
      attribute code { bookCode.enum }
   m._datatype.string2 =
      xsd:string { minLength = "2" }
}

div {
   m.DBLMetadata.type =
      attribute type { "text" }
   m.DBLMetadata.typeVersion =
      attribute typeVersion { "1.3" }
   m.DBLMetadata.id =
      ## id is overwritten at submission
      attribute id { xsd:string { pattern="[a-f0-9]{16}" } }
   m.DBLMetadata.revision =
      attribute revision { xsd:integer }
   m.DBLMetadata.attlist =
         m.DBLMetadata.type &
         m.DBLMetadata.typeVersion &
         m.DBLMetadata.id &
         m.DBLMetadata.revision
   m.DBLMetadata =
      element DBLMetadata {
         m.DBLMetadata.attlist &
         m.identification &
         m.confidential &
         m.agencies &
         m.language &
         m.country &
         m.type &
         m.bookNames &
         m.contents &
         m.progress? &
         m.contact &
         m.copyright &
         m.promotion? &
         m.archiveStatus &
         m.format
      }
}

div {
   m.identification =
      element identification {
      m.name &
      m.nameLocal &
      m.abbreviation &
      m.abbreviationLocal &
      m.scope &
      m.description &
      m.dateCompleted &
      m.systemId* &
      m.bundleProducer
    }
}

div {
   m.name =
      ## DCMI: title
      element name {
         m._datatype.string2
      }
}

div {
   m.nameLocal =
      ## nameLocal should default to name
      element nameLocal {
         m._datatype.string2
      }
}

div {
   m.abbreviation =
      element abbreviation {
         xsd:string { pattern="[A-Za-z0-9\-]{2,8}" }
      }
}

div {
   m.abbreviationLocal =
      ## abbreviationLocal should default to abbreviation
      element abbreviationLocal {
         xsd:string { minLength="1" maxLength="8" }
      }
}

div {
   m.scope =
      ## DCMI: title/scriptureScope
      element scope {
         text
      }
}

div {
   m.description =
      ## DCMI: description
      element description {
         m._datatype.string2
      }
}

div {
   m.dateCompleted =
      ## DCMI: date
      element dateCompleted {
         (xsd:date | xsd:gYear | xsd:gYearMonth | xsd:dateTime )?
      }
}

div {
   m.systemId.type.enum =
      ## UBS Translation Management System database ID
      "tms" |
      ## Paratext Project GUID
      "paratext" |
      ## SIL REAP database ID
      "reap" |
      ## Biblica database id
      "biblica"
   m.systemId.type =
      attribute type { m.systemId.type.enum }
   m.systemId.attlist =
      m.systemId.type
   m.systemId =
      ## systemId[@type='paratext'] is overwritten by Paratext
      element systemId {
        m.systemId.attlist,
        m._datatype.string2
   }
}

div {
   m.bundleProducer =
      ## bundleProducer is overwritten by Paratext
      element bundleProducer {
         m._datatype.string2
      }
}

div {
   m.confidential =
      ## DCMI: accessRights/confidential
      element confidential {
         xsd:boolean
      }
}

div {
   m.agencies =
      element agencies {
         m.etenPartner? &
         m.creator+ &
         m.publisher? &
         m.contributor*
    }
}

div {
   #m.etenPartner.enum =
   #   "UBS" | "WBT" | "Biblica" | "PBT" | "SIM"
   ## Primary translation or coordination/sponsorship agency
   m.etenPartner =
      element etenPartner { 
         # m.etenPartner.enum
         m._datatype.string2?
      }
}

div {
   m.creator =
      ## DCMI: creator
      element creator {
         m._datatype.string2
      }
}

div {
   m.publisher =
      ## publisher may be the same as translation (description/sponsorship)
      ## DCMI: publisher
      element publisher {
         m._datatype.string2
      }
}

div {
   m.contributor =
      ## DCMI: contributor
      element contributor {
        text
      }
}

div {
   m.language =
      element language {
       m.language.iso &
       m.language.name &
       m.ldml &
       m.rod &
       m.script &
       m.scriptDirection &
       m.numerals
    }
}

div {
   m.language.iso =
      ## DCMI: language/iso (ISO639-3)
   element iso {
      xsd:string { pattern = "[a-z][a-z][a-z]" }
   }
}

div {
   m.language.name =
      ## DCMI: subject/language (ISO639-3)
   element name {
      m._datatype.string2
   }
}

div {
   m.ldml =
      ## DCMI: language/ldml
   element ldml {
      xsd:string { pattern = "[A-Za-z]{2,3}([\-_][A-Za-z0-9]+){0,3}" }?
   }
}

div {
   m.rod =
      ## DCMI: language/rod
   element rod {
      xsd:string { pattern = "[0-9]{5}" }?
   }

}

div {
   m.script =
      ## DCMI: language/script
   element script {
      m._datatype.string2
   }
}

div {
   m.scriptDirection.enum =
      ## LTR (Left to Right)
      "LTR" |
      ## RTL (Right to Left)
      "RTL"
   m.scriptDirection =
      ## scriptDirection is overwritten by Paratext
   ## DCMI: language/scriptDirection
   element scriptDirection {
      ( m.scriptDirection.enum )
   }
}

div {
   m.numerals =
      element numerals {
         ## DCMI: language/numerals
         ( empty | numeralSystem.enum )
      }
}

div {
   m.country =
      element country {
         m.country.iso &
         m.country.name
      }
}

div {
   m.country.iso =
      ## DCMI: coverage/spatial (ISO3166)
   element iso {
      xsd:string { pattern = "[A-Z][A-Z][A-Z]?" }
   }
}

div {
   m.country.name =
      ## DCMI: subject/subjectCountry
   element name {
      m._datatype.string2
   }
}

div {
   m.type =
      element type {
         m.translationType &
         element audience {
            ## DCMI: audience
            translationLevel.enum ?
         }
      }
}

div {
   m.translationType =
      ## DCMI: type/translationType
      element translationType {
         translationType.enum ?
      }
}

div {
   m.bookNames =
      ## bookNames/book is overwritten by Paratext
   element bookNames {
      m.bookNames.book*
    }
}

div {
   m.bookNames.book.attlist =
      m._.code
   m.bookNames.book =
      element book {
         m.bookNames.book.attlist &
         m.long &
         m.short &
         m.abbr
      }
}

div {
   m.long =
      element long { text }
}

div {
   m.short =
      element short { text }
}

div {
   m.abbr =
      element abbr { text }
}

div {
   m.contents =
      ## DCMI: tableOfContents
      element contents {
         m.bookList+
    }
}

div {
   m.bookList.id =
      attribute id { xsd:integer }
   m.bookList.default
      attribute default { xsd:boolean }
   m.bookList.attlist =
      m.bookList.id
      m.bookList.default?
   m.bookList =
      element bookList {
        m.bookList.attlist &
        m.name &
        m.nameLocal &
        m.abbreviation &
        m.abbreviationLocal &
        m.booklist.description &
        m.booklist.descriptionLocal &
        m.books
      }
}


div {
   m.booklist.description =
       element name { text }
}

div {
   m.booklist.descriptionLocal =
       element name { text }
}

div {
   m.books =
      element books {
         m.book+
      }
}

div {
   m.book.attlist =
      m._.code
   m.book =
      element book {
         m.book.attlist
      }
}

div {
   m.progress =
      ## progress is overwritten by Paratext
   element progress { m.progress.book* }
}

div {
   m.book.stage =
      attribute stage { translationStage.enum }
   m.progress.book.attlist =
      (m.book.stage,
       m._.code)
   m.progress.book =
      ## DCMI description/stage
   element book {
      m.progress.book.attlist
   }
}

div {
   m.contact =
      ## Default to Publisher (from agencies)
   element contact {
      m.rightsHolder &
      m.rightsHolderLocal &
      m.rightsHolderAbbreviation &
      m.rightsHolderURL &
      m.rightsHolderFacebook
    }
}

div {
   m.rightsHolder =
      ## DCMI: rightsHolder
      element rightsHolder {
         m._datatype.string2
      }
}

div {
   m.rightsHolderLocal =
      ## DCMI: rightsHolder/contactLocal
      element rightsHolderLocal {
         m._datatype.string2?
      }
}

div {
   m.rightsHolderAbbreviation =
      ## DCMI: contactAbbreviation
      element rightsHolderAbbreviation {
         m._datatype.string2
      }
}

div {
   m.rightsHolderURL =
      ## DCMI: rightsHolder/contactURL
      element rightsHolderURL {
         xsd:anyURI?
      }
}

div {
   m.rightsHolderFacebook =
      ## DCMI: rightsHolder/contactFacebook
      element rightsHolderFacebook {
         xsd:anyURI?
      }
}

div {
   m.copyright =
      element copyright {
         m.statement
    }
}

div {
   m.statement.attlist =
      m._.contentType
   m.statement =
      ## For example: (C)2002, 2012 United Bible Societies
   element statement {
      m.statement.attlist,
        ## DCMI: rights
        m.htmlMarkup+
      }
}

div {
   m.promotion =
      element promotion {
         m.promoVersionInfo &
         m.promoEmail
      }
}

div {
   m.promoVersionInfo.attlist =
      m._.contentType
   m.promoVersionInfo =
      ## DCMI: description/pubPromoVersionInfo
      element promoVersionInfo {
         m.promoVersionInfo.attlist,
         m.htmlMarkup+
      }
}

div {
   m.promoEmail.attlist =
      m._.contentType
   m.promoEmail =
      element promoEmail {
         m.promoEmail.attlist,
         ## DCMI: description/pubPromoEmail
         m.htmlMarkup+
      }
}

div {
   m.archiveStatus =
    element archiveStatus {
      m.archivistName &
      m.dateArchived &
      m.dateUpdated &
      m.comments
    }
}

div {
   m.archivistName =
      ## archivistName is overwritten by Paratext
   ## DCMI: contributor/archivist
   element archivistName {
      m._datatype.string2
   }
}

div {
   m.dateArchived =
      ## dateArchived is overwritten by Paratext
      ## DCMI: dateSubmitted (xsd:dateTime)
   element dateArchived {
      xsd:dateTime
   }
}

div {
   m.dateUpdated =
      ## dateUpdated is overwritten by Paratext
   element dateUpdated {
      ## DCMI: modified (xsd:dateTime)
      xsd:dateTime
   }
}

div {
   m.comments =
      ## DCMI: abstract
      element comments {
         xsd:string { minLength = "2" maxLength = "255" }
      }
}

div {
   m.format.enum =
      "text/xml"
   m.format =
    ## format is overwritten by Paratext
   ## DCMI: format
    element format {
       m.format.enum
    }
}

div {
   m.htmlMarkup = (
      m.p
    | m.h1
    | m.h2
    | m.h3
    | m.ul
    | m.ol
    | m.blockquote
    | m.htmlCharMarkup)

   m.p =
      element p { (text | m.htmlCharMarkup)+ }
   m.h1 =
      element h1 { text }
   m.h2 =
      element h2 { text }
   m.h3 =
      element h3 { text }
   m.ol =
      element ol { m.li+ }
   m.ul =
      element ul { m.li+ }
   m.li =
       element li { text }
   m.blockquote =
      element blockquote { text }
}

div {
   m.htmlCharMarkup = (
      text
    | m.a
    | m.img
    | m.br
    | m.strong
    | m.b
    | m.em
    | m.i)

   m.a.href =
      attribute href { xsd:anyURI }
   m.a.attlist =
      m.a.href
   m.a =
      element a {
         m.a.attlist,
         m.htmlCharMarkup
      }
   m.img.src =
      attribute src { xsd:anyURI }
   m.img.alt =
      attribute alt { text }
   m.img.attlist =
      (m.img.src,
       m.img.alt?)
   m.img =
      element img {
         m.img.attlist,
         text
      }
   m.br =
      element br { empty }
   m.strong =
      element strong { text }
   m.b =
      element b { text }
   m.em =
      element em { text }
   m.i =
      element i { text }
}

numeralSystem.enum = (
           "Arabic" # (a.k.a. 'Hindu') = 0123456789
         | "Bengali"
         | "Burmese"
         | "Devanagari"
         | "Ethiopic"
         | "Farsi"
         | "Gujarati"
         | "Gurmukhi"
         | "Hindi" # (i.e. 'Arabic' as used in Egypt)
         | "Kannada"
         | "Khmer"
         | "Malayalam"
         | "Oriya"
         | "Tamil"
         | "Telugu"
         | "Thai"
         | "Tibetan")

translationType.enum = (
           "First"
         | "New"
         | "Revision")

translationLevel.enum = (
           "Basic"
         | "Common"
         | "Common - Literary"
         | "Literary"
         | "Liturgical")

# 1 = draft, 2 = internalReview, 3 = extenalReview, 4 = finalReview
translationStage.enum = (
   ## draft
   "1"
   | ## internalReview
   "2"
   |
   ## externalReview
   "3"
   |
   ## finalReview
   "4")

