# metadata.rnc
# -----------------------------------------------------------------------------
# A compact syntax Relax NG Schema for the DBL @type="audio" metadata file.
# DBL audio version = 1.1

# - Suggested Dublin Core Metadata (DCMI) element/refinement relationships are 
#   added as documentation strings "## DCMI: "
# - A syntax encoding scheme may be mentioned after the DCMI documentation in 
#   parentheses; e.g. language/iso (ISO639-3)
# -----------------------------------------------------------------------------

default namespace = ""
datatypes xsd = "http://www.w3.org/2001/XMLSchema-datatypes"

start = m.DBLMetadata

div {
   m._.contentType.enum =
      "xhtml"
   m._.contentType =
      attribute contentType { m._.contentType.enum }
   m._.code =
      attribute code { bookCode.enum }
   m._datatype.string2 =
      xsd:string { minLength = "2" }
}

div {
   m.DBLMetadata.type =
      attribute type { "audio" }
   m.DBLMetadata.typeVersion =
      attribute typeVersion { "1.2" }
   m.DBLMetadata.id =
      ## id is overwritten at submission
      attribute id { xsd:string { pattern="[a-f0-9]{16}" } }
   m.DBLMetadata.revision =
      attribute revision { xsd:integer }
   m.DBLMetadata.attlist =
         m.DBLMetadata.type &
         m.DBLMetadata.typeVersion &
         m.DBLMetadata.id &
         m.DBLMetadata.revision
   m.DBLMetadata =
      element DBLMetadata {
         m.DBLMetadata.attlist &
         m.identification &
         m.confidential &
         m.relationships &
         m.agencies &
         m.language &
         m.type &
         m.format &
         m.books &
         m.contact &
         m.copyright &
         m.promotion? &
         m.archiveStatus
      }
}

div {
   m.identification =
      element identification {
         m.name &
         m.nameLocal &
         m.description &
         m.dateCompleted &
         m.systemId* &
         m.bundleProducer
      }
}

div {
   m.name =
      ## DCMI: title
      element name {
         m._datatype.string2
      }
}

div {
   m.nameLocal =
      ## nameLocal should default to name
      element nameLocal {
         m._datatype.string2
      }
}

div {
   m.description =
      ## DCMI: description
      element description {
         m._datatype.string2
      }
}

div {
   m.dateCompleted =
      ## DCMI: date
      element dateCompleted {
         (xsd:date | xsd:gYear | xsd:gYearMonth | xsd:dateTime )?
      }
}

div {
   m.systemId.type.enum =
      ## UBS Translation Management System database ID
      "tms" |
      ## SIL REAP database ID
      "reap" |
      ## FCBH Digital Bible Platform DAM ID
      "dbp"
   m.systemId.type =
      attribute type { m.systemId.type.enum }
   m.systemId.attlist =
      m.systemId.type
   m.systemId =
      element systemId {
        m.systemId.attlist,
        m._datatype.string2
   }
}

div {
   m.bundleProducer =
      ## bundleProducer is overwritten by Paratext
      element bundleProducer {
         m._datatype.string2
      }
}

div {
   m.confidential =
      ## DCMI: accessRights/confidential
      element confidential {
         xsd:boolean
      }
}

div {
   m.relationships =
      element relationships {
         m.relation+
      }
}

div {
   m.relation.type.enum =
      "text" | 
      "print" | 
      "audio" | 
      "video" | 
      "ebook"
   m.relation.type =
      attribute type { m.relation.type.enum }
   m.relation.id =
      attribute id { xsd:string { pattern="[a-f0-9]{16}" } }
   m.relation.revision =
      attribute revision { xsd:integer }
   m.relation.attlist =
      m.relation.type &
      m.relation.id &
      m.relation.revision
   m.relation =
      ## DCMI: relation
      element relation {
         m.relation.attlist
      }
}

div {
   m.agencies =
      element agencies {
         m.etenPartner? &
         m.contributor+
    }
}

div {
   #m.etenPartner.enum =
   #   "UBS" | "WBT" | "Biblica" | "PBT" | "SIM"
   ## Primary translation or coordination/sponsorship agency
   m.etenPartner =
      element etenPartner { 
         # m.etenPartner.enum
         m._datatype.string2?
      }
}

div {
   m.contributor.type.enum =
      "content" |
      "finance" |
      "management" |
      "publication" |
      "qa"
   m.contributor.type =
      attribute type { m.contributor.type.enum }
   m.contributor.attlist =
      m.contributor.type
   m.contributor =
      ## DCMI: contributor
      element contributor {
         m.contributor.attlist,
         m._datatype.string2
      }
}

div {
   m.language =
      element language {
         m.language.iso &
         m.ldml &
         m.rod?
      }
}

div {
   m.language.iso =
      ## DCMI: language/iso (ISO639-3)
   element iso {
      xsd:string { pattern = "[a-z][a-z][a-z]" }
   }
}

div {
   m.ldml =
      ## DCMI: language/ldml
      element ldml {
         xsd:string { pattern = "[A-Za-z]{2,3}([\-_][A-Za-z0-9]+){0,3}" }?
      }
}

div {
   m.rod =
      ## DCMI: language/rod
      element rod {
         xsd:string { pattern = "[0-9]{5}" }?
      }
}

div {
   m.type =
      element type {
         m.audioType
   }
}

div {
   m.audioType.enum = 
      "Dramatized" |
      "Non-Dramatized" |
      "Single-Voice"
   m.audioType =
      ## DCMI: type/audioType
      element audioType {
         m.audioType.enum ?
      }
}

div {
   m.format =
      ## DCMI: format
      element format {
         m.mimeType &
         m.compression &
         m.trackConfiguration &
         m.bitRate &
         m.bitDepth &
         m.samplingRate
      }
}

div {
   m.mimeType.enum =
      "audio/mpeg" |
      "audio/wav"
   m.mimeType =
      element mimeType {
         m.mimeType.enum
      }
}

div {
   m.compression.enum =
      "MP3" |
      "FLAC" |
      "WAV" |
      empty
      ## http://www.ebu.ch/metadata/cs/web/ebu_AudioCompressionCodeCS_p.xml.htm
   m.compression =
      element compression {
         m.compression.enum
      }
}

div {
   m.trackConfiguration.enum =
      "1/0 (Mono)" |
      "Dual mono" |
      "2/0 (Stereo)" |
      "5.1 Surround" |
      empty
      ## http://www.ebu.ch/metadata/cs/web/ebu_AudioFormatCodeCS_p.xml.htm
   m.trackConfiguration =
      element trackConfiguration {
         m.trackConfiguration.enum
      }
}

div {
   m.bitRate =
      element bitRate {
         xsd:integer |
         empty
      }
}

div {
   m.bitDepth =
      element bitDepth {
         xsd:integer |
         empty
      }
}

div {
   m.samplingRate =
      element samplingRate {
         xsd:integer |
         empty
      }
}

div {
   m.books =
      element books {
         m.book+
      }
}

div {
   m.book.attlist =
      m._.code
   m.book =
      element book {
         m.book.attlist
      }
}

div {
   m.contact =
      ## Default to Publisher (from agencies)
   element contact {
      m.rightsHolder &
      m.rightsHolderLocal &
      m.rightsHolderAbbreviation &
      m.rightsHolderURL &
      m.rightsHolderFacebook &
      m.rightsAdmin?
    }
}

div {
   m.rightsHolder =
      ## DCMI: rightsHolder
      element rightsHolder {
         m._datatype.string2
      }
}

div {
   m.rightsHolderLocal =
      ## DCMI: rightsHolder/contactLocal
      element rightsHolderLocal {
         m._datatype.string2?
      }
}

div {
   m.rightsHolderAbbreviation =
      ## DCMI: contactAbbreviation
      element rightsHolderAbbreviation {
         m._datatype.string2
      }
}

div {
   m.rightsHolderURL =
      ## DCMI: rightsHolder/contactURL
      element rightsHolderURL {
         xsd:anyURI?
      }
}

div {
   m.rightsHolderFacebook =
      ## DCMI: rightsHolder/contactFacebook
      element rightsHolderFacebook {
         xsd:anyURI?
      }
}

div {
   m.rightsAdmin =
      element rightsAdmin {
         m._datatype.string2
      }
}

div {
   m.copyright =
      element copyright {
         m.statement
    }
}

div {
   m.statement.attlist =
      m._.contentType
   m.statement =
      ## For example: (C)2002, 2012 United Bible Societies
      ## DCMI: rights
      element statement {
         m.statement.attlist,
         m.htmlMarkup+
      }
}

div {
   m.promotion =
      element promotion {
         m.promoVersionInfo
      }
}

div {
   m.promoVersionInfo.attlist =
      m._.contentType
   m.promoVersionInfo =
      ## DCMI: description/pubPromoVersionInfo
      element promoVersionInfo {
         m.promoVersionInfo.attlist,
         m.htmlMarkup+
      }
}

div {
   m.archiveStatus =
      element archiveStatus {
         m.archivistName &
         m.dateArchived &
         m.dateUpdated &
         m.comments
      }
}

div {
   m.archivistName =
      ## archivistName is overwritten by Paratext
      ## DCMI: contributor/archivist
      element archivistName {
         m._datatype.string2
      }
}

div {
   m.dateArchived =
      ## dateArchived is overwritten by Paratext
      ## DCMI: dateSubmitted (xsd:dateTime)
      element dateArchived {
         xsd:dateTime
      }
}

div {
   m.dateUpdated =
      ## dateUpdated is overwritten by Paratext
      ## DCMI: modified (xsd:dateTime)
      element dateUpdated {
         xsd:dateTime
      }
}

div {
   m.comments =
      ## DCMI: abstract
      element comments {
         xsd:string { minLength = "2" maxLength = "255" }
      }
}

div {
   m.htmlMarkup = (
      m.p
    | m.h1
    | m.h2
    | m.h3
    | m.ul
    | m.ol
    | m.blockquote
    | m.htmlCharMarkup)

   m.p =
      element p { (text | m.htmlCharMarkup)+ }
   m.h1 =
      element h1 { text }
   m.h2 =
      element h2 { text }
   m.h3 =
      element h3 { text }
   m.ol =
      element ol { m.li+ }
   m.ul =
      element ul { m.li+ }
   m.li =
       element li { text }
   m.blockquote =
      element blockquote { text }
}

div {
   m.htmlCharMarkup = (
      text
    | m.a
    | m.img
    | m.br
    | m.strong
    | m.b
    | m.em
    | m.i)

   m.a.href =
      attribute href { xsd:anyURI }
   m.a.attlist =
      m.a.href
   m.a =
      element a {
         m.a.attlist,
         m.htmlCharMarkup
      }
   m.img.src =
      attribute src { xsd:anyURI }
   m.img.alt =
      attribute alt { text }
   m.img.attlist =
      (m.img.src,
       m.img.alt?)
   m.img =
      element img {
         m.img.attlist,
         text
      }
   m.br =
      element br { empty }
   m.strong =
      element strong { text }
   m.b =
      element b { text }
   m.em =
      element em { text }
   m.i =
      element i { text }
}

